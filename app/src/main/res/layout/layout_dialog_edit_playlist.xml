<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_corner_16"
    android:layout_margin="@dimen/define_dimen_16">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/define_dimen_12"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:text="CHỈNH SỬA PLAYLIST"
        android:background="@drawable/bg_main_corner_16_top_left_right"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/define_dimen_16">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sửa tên playlist:"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="center"/>
        <EditText
            android:id="@+id/edt_playlist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/define_dimen_12"
            android:layout_marginTop="@dimen/define_dimen_12"
            android:background="@drawable/bg_white_corner_8_gray_border"
            android:hint="Tên Playlist"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/define_dimen_14"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/bg_gray_corner_8"
                android:alpha="0.5"
                android:text="HỦY"/>
            <Button
                android:id="@+id/btn_del_playlist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/bg_red_corner_8"
                android:text="XÓA PLAYLIST"/>
            <Button
                android:id="@+id/btn_edit_playlist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/bg_main_corner_8"
                android:text="SỬA"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>