<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_corner_16"
    android:layout_margin="@dimen/define_dimen_16">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/define_dimen_12"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:text="ĐỔI MẬT KHẨU"
        android:background="@drawable/bg_main_corner_16_top_left_right"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/define_dimen_16">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập thông tin đổi mật khẩu"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="center"/>
        <EditText
            android:id="@+id/edt_current_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:inputType="textPassword"
            android:padding="@dimen/define_dimen_12"
            android:layout_marginTop="@dimen/define_dimen_12"
            android:background="@drawable/bg_white_corner_8_gray_border"
            android:hint="Nhập mật khẩu hiện tại"/>
        <EditText
            android:id="@+id/edt_new_password_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:padding="@dimen/define_dimen_12"
            android:layout_marginTop="@dimen/define_dimen_12"
            android:background="@drawable/bg_white_corner_8_gray_border"
            android:hint="Nhập mật khẩu mới"/>
        <EditText
            android:id="@+id/edt_confirm_password_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:padding="@dimen/define_dimen_12"
            android:layout_marginTop="@dimen/define_dimen_12"
            android:background="@drawable/bg_white_corner_8_gray_border"
            android:hint="Xác nhận mật khẩu"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/define_dimen_14"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_cancel_change_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:visibility="visible"
                android:layout_margin="@dimen/define_dimen_6"
                android:background="@drawable/bg_gray_corner_8"
                android:alpha="0.5"
                android:text="HỦY"/>
            <Button
                android:id="@+id/btn_change_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:layout_margin="@dimen/define_dimen_6"
                android:background="@drawable/bg_main_corner_8"
                android:text="XÁC NHẬN"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>