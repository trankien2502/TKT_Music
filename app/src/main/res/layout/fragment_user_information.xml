<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/define_dimen_16">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_margin="@dimen/define_dimen_4"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/img_user_default"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ và tên"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/define_dimen_5"
        android:background="@drawable/bg_white_shape_border_color_main"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:padding="@dimen/define_dimen_12"
        android:textSize="@dimen/text_size_small"
        tools:ignore="Autofill,LabelFor" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/define_dimen_16"
        android:text="Điện thoại"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/edt_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/define_dimen_5"
        android:background="@drawable/bg_white_shape_border_color_main"
        android:imeOptions="actionNext"
        android:inputType="phone"
        android:padding="@dimen/define_dimen_12"
        android:textSize="@dimen/text_size_small"
        tools:ignore="Autofill,LabelFor" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/define_dimen_16"
        android:text="@string/feedback_email"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/edt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/define_dimen_5"
        android:background="@drawable/bg_white_shape_border_color_main"
        android:clickable="false"
        android:padding="@dimen/define_dimen_12"
        android:textSize="@dimen/text_size_small"
        tools:ignore="Autofill,LabelFor" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_edit_information"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/define_dimen_6"
            android:background="@drawable/bg_main_shape_corner_6"
            android:gravity="center"
            android:padding="@dimen/define_dimen_12"
            android:text="SỬA THÔNG TIN"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" />
        />
        <TextView
            android:id="@+id/btn_edit_password"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/define_dimen_6"
            android:background="@drawable/bg_main_shape_corner_6"
            android:gravity="center"
            android:padding="@dimen/define_dimen_12"
            android:text="ĐỔI MẬT KHẨU"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" />
        />
    </LinearLayout>
    <TextView
        android:id="@+id/btn_log_out"
        android:layout_width="@dimen/define_dimen_200"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/define_dimen_6"
        android:background="@drawable/bg_main_shape_corner_6"
        android:gravity="center"
        android:padding="@dimen/define_dimen_12"
        android:text="ĐĂNG XUẤT"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_normal" />

</LinearLayout>
</ScrollView>

